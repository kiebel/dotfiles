# vim :set et:
[alias]
    st  = status
    br  = branch
    ci  = commit
    co  = checkout
    df  = diff
    lg  = log -p
    lgl = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls  = ls-files
    vdf = difftool -y -t vimdiff -R
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor = vim
[merge]
    tool = splice
[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
