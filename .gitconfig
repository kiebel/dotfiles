# vim :set et:
[alias]
    st  = status
    br  = branch
    ci  = commit
    co  = checkout
    df  = diff
    lg  = log -p
    lgl = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls  = ls-files
    vdf = difftool -y -t vimdiff -R
[color]
    ui = auto
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = 33 reverse
    local = 37
    remote = 166
[color "decorate"]
    branch = 64
    remoteBranch = 166
    stash = 160
    tag = 37
    HEAD = 33
[color "diff"]
    meta = 33
    frag = 37
    old = 166
    new = 64
    whitespace = 160 reverse
    plain = 245
[color "status"]
    added = 64
    branch = 37
    changed = 166
    untracked = 33
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    editor = vim
    pager = "less -F -X"
[merge]
    tool = splice
[mergetool "splice"]
    cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
    trustExitCode = true
[push]
    default = simple
